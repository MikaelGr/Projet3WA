<% if user_signed_in? %>
  <h1>Catégories</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nom</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <%= link_to category.name, category %>
          </td>
          <td><%= link_to 'Voir', category, class: 'btn btn-outline-primary btn-sm' %></td>
          <td><%= link_to 'Modifier', edit_category_path(category), class: 'btn btn-outline-secondary btn-sm' %></td>
          <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Êtes vous sûr ?' }, class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nouvelle Catégorie', new_category_path, class:"btn btn-dark" %>
<% else %>
  Veuillez vous inscrire ou vous connecter  
<% end %>